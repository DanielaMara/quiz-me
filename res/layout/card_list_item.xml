<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:text="TextView" android:layout_width="wrap_content" 
              android:layout_height="wrap_content" android:layout_weight=".6"
              android:layout_marginTop="5sp" android:layout_marginBottom="5sp"
              android:id="@+id/CardListTitleView"></TextView>
    <Button android:layout_weight=".4" android:layout_height="wrap_content"
            android:id="@+id/CardListButtonView" android:layout_width="wrap_content"
            android:text="@string/CardDeleteButton"></Button>
    
</LinearLayout>
